    "utils": "file:src/utils"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "aws-sdk-client-mock": "^4.1.0",
    "aws-sdk-client-mock-jest": "^4.1.0",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "ts-to-zod": "^3.15.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "vitest": "^3.1.1"
